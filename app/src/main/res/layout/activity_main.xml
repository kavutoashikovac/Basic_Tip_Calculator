<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <EditText
            android:id="@+id/amountEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Amount"
            android:inputType="numberDecimal"/>

        <SeekBar
            android:id="@+id/tipPercentageSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/amountEditText"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tipPercentageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tipPercentageSeekBar"
            android:layout_marginTop="16dp"
            android:text="Tip Percentage: 0%"/>

        <Button
            android:id="@+id/calculateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tipPercentageTextView"
            android:layout_marginTop="16dp"
            android:text="Calculate"/>

        <Spinner
            android:id="@+id/customSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tipPercentageSeekBar"
            android:layout_marginTop="16dp"/>


        <Button
            android:id="@+id/warningButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/calculateButton"
            android:layout_marginTop="16dp"
            android:text="Call The Waiter"/>

        <Button
            android:id="@+id/showDialogButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/warningButton"
            android:layout_marginTop="16dp"
            android:text="Send A Message To Waiter"/>

        <Button
            android:id="@+id/dataTransferButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/showDialogButton"
            android:layout_marginTop="16dp"
            android:text="Exit"/>

        <TextView
            android:id="@+id/blinkingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dataTransferButton"
            android:layout_marginTop="16dp"
            android:text="Blinking Text"/>

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>